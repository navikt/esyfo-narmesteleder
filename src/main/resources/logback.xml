<configuration>
    <appender name="stdout_json" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
    </appender>
    <appender name="stdout_simple" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) %cyan([%thread]) %yellow(%logger{20}) - %msg%n
            </pattern>
        </encoder>
    </appender>
    <if condition='isNull("NAIS_CLUSTER_NAME")'>
        <then>
            <root level="info">
                <appender-ref ref="stdout_simple"/>
            </root>
        </then>
        <else>
            <root level="info">
                <appender-ref ref="stdout_json"/>
            </root>
        </else>
    </if>
</configuration>
